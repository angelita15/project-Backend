<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Registro</h1>
            <hr>

            <form action="/colaboradores/registro" method="POST">
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username">
                </div>

                <div class="mb-3">
                    <label for="emailInput" class="form-label">Dirección de email</label>
                    <input type="email" class="form-control" id="emailInput" name="email">
                </div>

                <div class="mb-3">
                    <label for="passwordInput" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="passwordInput" name="password">
                </div>


                <div class="mb-3  ">
                    <select name="category" class="form-select">
                        <option selected>Seleccionar tipo de espacio</option>
                        <option value="THEATRE">THEATRE</option>
                        <option value="MUSEM">MUSEM</option>
                        <option value="ART GALLERY">ART GALLERY</option>
                        <option value="CONCERT HALL">CONCERT HALL</option>
                        <option value="BOOKSTORE">BOOKSTORE</option>
                        <option value="MULTIDISCIPLINARY SPACE">MULTIDISCIPLINARY SPACE</option>
                        <option value="OTHERS">OTHERS</option>
                        <option value="UNKOWN">UNKOWN</option>
                    </select>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark block">Completar registro</button>
                    </div>

            </form>
        </div>
    </div>

</div>