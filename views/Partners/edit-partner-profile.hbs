<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar perfil</h1>
            <hr>

            <form action="/colaboradores/perfil/editar/{{_id}}" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="usernameInput" name="username" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="emailInput" class="form-label">Direcci√≥n de email</label>
                    <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">
                </div>

                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="imageInput" name="image" value="{{image}}">
                </div>
                <div class="mb-3">
                    <label for="websiteInput" class="form-label">Espacio web</label>
                    <input type="text" class="form-control" id="websiteInput" name="websiteUrl" value="{{websiteUrl}}">
                </div>


                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Editar perfil</button>
                </div>

                {{#if errorMessage}}
                <div id="error">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>