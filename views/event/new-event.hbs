
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo evento</h1>
            <hr>

            <form action="/eventos/crear" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="nameInput" class="form-label">Nombre del evento</label>
                    <input type="text" class="form-control" id="nameInput" name="name">
                </div>
                
                <div class="mb-3">
                    <label for="dateInput" class="form-label">Fecha del evento</label>
                    <input type="date" class="form-control" id="dateInput" name="date">
                </div>

                 <div class="mb-3">
                    <label for="streetNameInput" class="form-label"> nombre de la calle </label>
                    <input type="text" class="form-control" id="streetNameInput" name="streetName">
                </div>

                 <div class="mb-3">
                    <label for="streetNumberInput" class="form-label"> numero </label>
                    <input type="number" class="form-control" id="streetNumberInput" name="streetNumber">
                </div>

                <div class="mb-3">
                    <label for="postCodeInput" class="form-label"> codigo postal </label>
                    <input type="number" class="form-control" id="postCodeInput" name="postCode">
                </div>

                 <div class="mb-3">
                    <label for="cityInput" class="form-label"> Ciudad </label>
                    <input type="text" class="form-control" id="cityInput" name="city">
                </div>

                 <div class="mb-3">
                    <label for="latInput" class="form-label"> latitud </label>
                    <input type="text" class="form-control" id="latInput" name="lat">
                </div>

                 <div class="mb-3">
                    <label for="lngInput" class="form-label"> longitud </label>
                    <input type="text" class="form-control" id="lngInput" name="lng">
                </div>


                 <div class="mb-3">
                    <label for="descriptionInput" class="form-label"> descripcion del evento </label>
                    <input type="text" class="form-control" id="descriptionInput" name="description">
                </div>


                <div class="mb-3">
                    <label for="imageInput" class="form-label">imagen</label>
                    <input type="file" class="form-control" id="imageInput" name="image">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">crear evento</button>
                </div>

            </form>
        </div>
    </div>

</div>